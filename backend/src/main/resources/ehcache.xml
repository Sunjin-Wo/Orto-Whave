<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.ehcache.org/v3"
    xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <persistence directory="spring-boot-ehcache"/>

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache-template>

    <cache alias="usuarios" uses-template="default">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
    </cache>

    <cache alias="pacientes" uses-template="default">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
    </cache>

    <cache alias="servicios" uses-template="default">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
    </cache>

    <cache alias="productos" uses-template="default">
        <expiry>
            <ttl unit="hours">6</ttl>
        </expiry>
    </cache>

</config> 